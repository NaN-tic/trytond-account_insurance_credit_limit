<?xml version="1.0"?>

<tryton>
  <data>
    <record model="ir.ui.view" id="party_view_form">
      <field name="model">party.party</field>
      <field name="inherit" ref="party.party_view_form"/>
      <field name="name">party_form</field>
    </record>

    <record model="ir.ui.view" id="party_view_tree">
      <field name="model">party.party</field>
      <field name="inherit" ref="party.party_view_tree"/>
      <field name="name">party_tree</field>
    </record>

    <record model="ir.ui.view" id="partycredit_form_view">
      <field name="model">party.credit</field>
      <field name="type">form</field>
      <field name="name">partycredit_form</field>
    </record>

    <record model="ir.ui.view" id="partycredit_list_view">
      <field name="model">party.credit</field>
      <field name="type">tree</field>
      <field name="name">partycredit_list</field>
    </record>

    <record model="ir.ui.view" id="party_amount_view_tree">
      <field name="model">party.credit.amount</field>
      <field name="type">tree</field>
      <field name="priority" eval="20"/>
      <field name="name">party_amount_tree</field>
    </record>

    <record model="ir.action.act_window" id="act_partycredit">
      <field name="name">Credit Limits</field>
      <field name="res_model">party.credit</field>
      <field name="domain"
          eval="[('company', '=', Eval('context', {}).get('company', -1))]"
          pyson="1"/>
    </record>

    <record model="ir.action.act_window.view" id="act_partycredit_view1">
      <field name="sequence" eval="10"/>
      <field name="view" ref="partycredit_list_view"/>
      <field name="act_window" ref="act_partycredit"/>
    </record>

    <record model="ir.action.act_window.view" id="act_partycredit_view2">
      <field name="sequence" eval="20"/>
      <field name="view" ref="partycredit_form_view"/>
      <field name="act_window" ref="act_partycredit"/>
    </record>
  
    <menuitem id="menu_party_credit_root" name="Credit Limits"
      parent="account.menu_account" sequence="70"/>
    
    <menuitem id="menu_party_credit" name="Credit Limits"
      parent="menu_party_credit_root" action="act_partycredit"
      sequence="10" />


    <record model="ir.action.act_window" id="act_partyrisk">
      <field name="name">Credit Limit</field>
      <field name="res_model">party.risk.analysis</field>
    </record>
        
    <record model="ir.ui.view" id="partyriskanalysis_graph_view">
        <field name="model">party.risk.analysis</field>
        <field name="type">graph</field>
        <field name="name">partyriskanalysis_graph</field>
    </record> 

    <record model="ir.ui.view" id="partyriskanalysis_list_view">
        <field name="model">party.risk.analysis</field>
        <field name="type">tree</field>
        <field name="name">partyriskanalysis_list</field>
    </record>

    <!--  Relate -->
    <record model="ir.action.act_window" id="act_party_credit_limit">
        <field name="name">Credit Limit</field>
        <field name="res_model">party.credit</field>
        <field name="domain" eval="[('party', '=', Eval('active_id'))]"
              pyson="1"/>
    </record>
    <record model="ir.action.keyword"
        id="act_party_credit_limit_keyword1">
        <field name="keyword">form_relate</field>
        <field name="model">party.party,-1</field>
        <field name="action" ref="act_party_credit_limit"/>
    </record>

    <!-- Wizard -->
    <record model="ir.action.wizard" id="wizard_duplicate_party_credit">
        <field name="name">Duplicate Party Credit</field>
        <field name="wiz_name">party.credit.duplicate</field>
        <field name="model">party.credit</field>
    </record>

    <record model="ir.ui.view" id="party_credit_duplicate_view_form">
        <field name="model">party.credit.duplicate.start</field>
        <field name="type">form</field>
        <field name="name">party_credit_duplicate_form</field>
    </record>
  </data>
</tryton>
